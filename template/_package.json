{
	"name": "<%= name %>",
	"version": "1.0.0",
	"description": "<%= description %>",
	"author": "<%= author %>",
	"private": true,
	"engines": {
		"node": "^13"
	},
	"scripts": {
		"dev": "sh scripts/dev.sh",
		"devlocal": "sh scripts/devlocal.sh",
		"netlify:staging": "sh scripts/staging.sh",
		"netlify:production": "sh scripts/production.sh",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"lintfix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
		"precommit": "lint",
		"generate": "nuxt generate",
		"stylelint": "stylelint '**/*.vue' '**/*.scss'",
		"stylelint:fix": "stylelint '**/*.vue' '**/*.scss' --fix"
	},
	"dependencies": {},
	"devDependencies": {},
	"browserslist": [
		"last 2 versions",
		"not dead"
	],
	"stylelint": {
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"if",
						"for",
						"else",
						"each",
						"mixin",
						"include",
						"content",
						"extend"
					]
				}
			],
			"order/order": [
				"custom-properties",
				"dollar-variables",
				"declarations",
				"rules"
			],
			"indentation": "tab"
		},
		"extends": [
			"stylelint-logical-order"
		]
	}
}
