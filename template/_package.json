{
	"name": "<%= name %>",
	"version": "1.0.0",
	"description": "<%= description %>",
	"author": "<%= author %>",
	"private": true,
	"scripts": {
		"dev": "sh scripts/dev.sh",
		"devlocal": "sh scripts/devlocal.sh",
		"staging": "sh scripts/staging.sh",
		"production": "sh scripts/production.sh",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"lintfix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
		"precommit": "lint",
		"generate": "nuxt generate",
		"generate:develop": "cp ./config/develop.js ./config/latest.js && nuxt generate",
		"generate:staging": "cp ./config/staging.js ./config/latest.js && nuxt generate",
		"generate:production": "cp ./config/production.js ./config/latest.js && nuxt generate",
		"stylelint": "stylelint '**/*.vue' '**/*.scss'",
		"stylelint:fix": "stylelint '**/*.vue' '**/*.scss' --fix"
	},
	"dependencies": {
		"nuxt": "^2.6.1",
		"@nuxtjs/axios": "^5.4.1",
		"@nuxtjs/google-analytics": "^2.2.0"
	},
	"devDependencies": {
		"nuxt-rfg-icon": "^0.6.3",<% if (henris === 'beta') { %>
		"@henris/next": "^1.0.10",
		"@henris/custom": "^0.0.2",<% } else { %>
		"henris": "^0.6.9",<% } %>
		"babel-eslint": "^10.0.1",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-friendly-formatter": "^4.0.1",
		"eslint-loader": "^2.1.1",
		"eslint-plugin-vue": "^5.2.2",
		"eslint-plugin-prettier": "^3.0.0",
		"node-sass": "^4.9.3",
		"sass-loader": "^7.1.0",
		"stylelint": "^9.10.1",
		"stylelint-logical-order": "^0.0.5",
		"stylelint-order": "^2.2.0"
	},
	"browserslist": [
		"last 2 versions",
		"not dead"
	],
	"stylelint": {
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"if",
						"for",
						"else",
						"each",
						"mixin",
						"include",
						"content"
					]
				}
			],
			"order/order": [
				"custom-properties",
				"dollar-variables",
				"declarations",
				"rules"
			],
			"indentation": "tab"
		},
		"extends": [
			"stylelint-logical-order"
		]
	}
}
